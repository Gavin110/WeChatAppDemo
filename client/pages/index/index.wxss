/**index.wxss**/
.index {
  /* 常规布局 */
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1rpx solid red;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}
.view1 {
  order: 3;
  flex-grow: 2;
  border: 1rpx green solid;
  height: 200rpx; 
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-shrink: 2;
}
.view2 {
  order: 2;
  flex-grow: 1;
  flex-shrink: 1;
  border: 1rpx green solid;
}
.view3 {
  order: 1;
  flex-grow: 1;
  flex-shrink: 1;
  border: 1rpx green solid;
}